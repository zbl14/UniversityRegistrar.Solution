@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course

<div class="jumbotron text-center">
  <h2>Edit @Html.DisplayFor(model => model.Name)</h2>
</div>
<div class="text-center">
  <div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Back to list", "Index")</button>
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</button>
  </div>
</div>
<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CourseId)
    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)
    @Html.LabelFor(model => model.CourseNum)
    @Html.EditorFor(model => model.CourseNum)
    @* <!-- @Html.LabelFor(model => model.Department)
    @Html.DropDownList("DepartmentId") --> *@

    <button type="submit" class="btn btn-primary">Save</button>
}