@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<div class="jumbotron text-center">
  <h2>Course offerings</h2>
</div>

<div class="text-center">
  <div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Add new Course", "Create")</button>
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</button>
  </div>
</div>
<hr />
<div>
  @if (@Model.Count == 0)
  {
    <h3>No courses have been added for this semester</h3>
  }

  <ul>
    @foreach(Course course in Model)
    {
      <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</li>
    }
  </ul>
</div>