@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Department

<div class="jumbotron text-center">
  <h2>Create a new Department</h2>
</div>
<div class="text-center">
  <div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("All departments", "Index")</button>
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</button>
  </div>
</div>
<hr />

@using (Html.BeginForm())
{
  @Html.Label("Department Name")
  @Html.TextBoxFor(model => model.DepartmentName)
  
  <button type="submit" class="btn btn-primary">Add Department</button>
}