@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<div class="jumbotron text-center">
  <h2>Departments</h2>
</div>
<div class="text-center">
  <div class="btn-group btn-group-lg" role="group" aria-label="Large button group">
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Add new department", "Create")</button>
    <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Home", "Index", "Home")</button>
  </div>
</div>
<hr />
@if (@Model.Count == 0)
{
  <h3>No departments have been added.</h3>
}

<ul>
  @foreach(Department department in Model)
  {
    <li>@Html.ActionLink($"{department.DepartmentName}", "Details", new { id = department.DepartmentId })</li>
  }
</ul>
  