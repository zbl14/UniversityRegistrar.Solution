@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<div class="jumbotron text-center">
  <h2>Details of @Html.DisplayFor(model => model.Name) </h2>
</div>
<div>
  @Html.Label("Enrollment Date")
  @Html.DisplayFor(model => model.EnrollmentDate)
  <br>
  @if (@Model.JoinEntities.Count == 0)
  {
    <p>This student has not enrolled in any courses yet.</p>
  }
  else
  {
    <h3>Courses:</h3>
    <hr />
    <ul>
      @foreach(var join in Model.JoinEntities)
      {
        <li>@join.Course.Name</li>
       
        @using (Html.BeginForm("DeleteCourse", "Students"))
        {
          @Html.Hidden("joinId", @join.CourseStudentId)
          <button type="submit" class="btn btn-danger">Remove Course</button>
        }
        <hr />
      }
    </ul>
  }
  <div class="sideBar"> 
    <p>@Html.ActionLink("Add a course", "AddCourse", new { id = Model.StudentId })</p>
    <p>@Html.ActionLink("Back to all Students", "Index")</p>
    <p>@Html.ActionLink("Edit Student", "Edit", new { id = Model.StudentId })</p>
    <p>@Html.ActionLink("UnEnroll Student", "Delete", new { id = Model.StudentId })</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
</div>