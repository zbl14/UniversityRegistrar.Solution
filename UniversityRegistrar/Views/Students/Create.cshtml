@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student
<div class="jumbotron text-center">
  <h4>Add new Student</h4>
</div>

<div class="row">
  <div class="col-1">
    <div class="sideBar">
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  <p>@Html.ActionLink("Back to all students", "Index")</p>
    </div>
  </div>
  <div class="col-6">
@using (Html.BeginForm())
{
  @Html.Label("Date Of Enrollment") 
  @Html.TextBoxFor(model => model.EnrollmentDate, new {type = "date"})
  <br/>

  @Html.LabelFor(model => model.Name) 
  @Html.TextBoxFor(model => model.Name)
  <br/>

  @Html.Label("Select Course")
  @Html.DropDownList("CourseId") 

  
  <button type="Submit" class="btn btn-primary">Add Student</button>
}
  </div>
</div>
